{
    "compilerOptions": {
        "sourceMap": true,
        "module": "commonjs",
        "target": "es6",
        "allowJs": false,
        "jsx": "react",
        "noImplicitAny": true,
        "types": [
            "react",
            "react-dom",
            "react-native",
            "socket.io-client"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules/",
        "**/*.js"
     ]
}